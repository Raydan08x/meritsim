# Configuración de Puertos (usar puertos altos para evitar conflictos)
WEB_PORT=9010
API_PORT=9011
DB_PORT=5433

# Base de Datos PostgreSQL
POSTGRES_USER=meritsim
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=meritsim_db
DATABASE_URL=postgresql://meritsim:change_me_secure_password@db:5432/meritsim_db

# Backend
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Gemini API (para explicaciones pedagógicas)
GEMINI_API_KEY=your-gemini-api-key-here

# Entorno
ENVIRONMENT=development
DEBUG=true

# Admin Seed Credentials (se crean al iniciar)
ADMIN_EMAIL_1=admin@admin.com
ADMIN_PASS_1=admin_password
ADMIN_EMAIL_2=email2@example.com
ADMIN_PASS_2=secure_password_2
ADMIN_EMAIL_3=email3@example.com
ADMIN_PASS_3=secure_password_3
